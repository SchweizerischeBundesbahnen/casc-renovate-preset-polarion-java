{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": [
    "Default Renovate preset for Polarion Java repos (with Node.js support)"
  ],
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "automergeType": "branch",
  "platformAutomerge": true,
  "prCreation": "status-success",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 6am on monday"
    ],
    "minimumReleaseAge": null
  },
  "packageRules": [
    {
      "description": "Automerge all update",
      "matchManagers": [
        "pre-commit",
        "github-actions"
      ],
      "automerge": true,
      "minimumReleaseAge": null
    },
    {
      "description": "Maven packages from SchweizerischeBundesbahnen and Maven Central",
      "matchManagers": [
        "maven"
      ],
      "registryUrls": [
        "https://maven.pkg.github.com/SchweizerischeBundesbahnen",
        "https://repo.maven.apache.org/maven2"
      ],
      "allowedVersions": "!/-jboss-|-redhat-|redhat-|-jenkins-|-patch-|-atlassian-|-NODEP$|-atlassian$|-jbossorg-|-SNAPSHOT$|-PFD-|-jbossas-|-does-not-exist|-tc$|-jahia1$/"
    },
    {
      "description": "Maven - Disable provided/runtime deps except SBB packages",
      "matchManagers": [
        "maven"
      ],
      "registryUrls": [
        "https://maven.pkg.github.com/SchweizerischeBundesbahnen",
        "https://repo.maven.apache.org/maven2"
      ],
      "matchDepTypes": [
        "provided",
        "runtime"
      ],
      "excludePackagePatterns": [
        "sbb"
      ],
      "enabled": false
    },

    {
      "description": "SBB packages - Automerge minor/patch immediately",
      "matchPackagePatterns": [
        "^ch\\.sbb\\.",
        "^python-sbb-polarion$"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "minimumReleaseAge": "0 days"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Vulnerability alerts get highest priority",
      "matchCategories": [
        "security"
      ],
      "prPriority": 99
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "automerge": false,
    "minimumReleaseAge": "0 days"
  }
}
